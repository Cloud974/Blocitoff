<%= form_for [list, task] do |f| %>
  <% if task.errors.any? %>
    <div id="alert alert-danger">
      <h4><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h4>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form_group_tag(task.errors[:description]) do %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control', placeholder: 'Enter task description' %>
    <% end %>
    <%= form_group_tag(task.errors[:notes]) do %>
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control', rows: '8', placeholder: 'Enter task notes' %>
    <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
